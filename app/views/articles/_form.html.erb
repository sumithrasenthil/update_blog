
<%= form_for(@article) do |f| %>
  <% if @article.errors.any? %>
    <ul>
    <% @article.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
    </ul>
  <% end %>

<div class ="create_container">


  <h3 class="title">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </h3>

  <h3 class="body">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </h3>

  <%= f.hidden_field :user_id, value: current_user.id %>


  <p class="submit_button">
    <%= f.submit %>
  </p>

<% end %>
</div>





